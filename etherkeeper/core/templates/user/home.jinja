<div class="left-bar">
  <ul class="nav nav-pills nav-stacked">
    <li class="active">
        <a>All Documents</a>
    </li>
    <li>
        <a>Invites</a>
    </li>
    <li class="divider"></li>
  </ul>
</div>
<div class="">
    <table class='table table-striped table-hover'>
        <thead>
            <tr>
                <th class="cb"><input type="checkbox" /></th>
                <th>Name</th>
                <th>Tags</th>
                <th>Shared</th>
                <th>Last Modified</th>
            </tr>
        </thead>
        <tbody>
            {% for document in author.get_documents() %}
                <tr>
                    <td class="cb"><input type="checkbox" value="{{ document.id }}" /></td>
                    <td>
                        <a href="/etherpad/{{ document.id }}">
                            {% if document.pad.title|length > 0 %}
                                {{ document.pad.title }}
                            {% else %}
                                Untitled Document 
                            {% endif %}
                        </a>
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>   
            {% endfor %}
        </tbody>
    </table>
</div>