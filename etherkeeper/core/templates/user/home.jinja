<div class="row">
    <div id="nav_tree" class="col-lg-2 col-md-2 col-sm-2">
      <ul class="nav nav-pills nav-stacked">
        <li class="active">
            <a href="/home">Home</a>
        </li>
        <li>
            <a href="/invites">Invites <span class="badge pull-right"{% if invites|length > 0 %}style="display:block">{{invites|length}}{% else %}>{% endif %}</span></a>
        </li>
        <li class="divider"></li>
      </ul>
    </div>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <div id="all" class="page">
            <table class='table table-striped table-hover'>
                <thead>
                    <tr>
                        <th class="cb"><input type="checkbox" /></th>
                        <th class="icon"></th>
                        <th>Name</th>
                        <th>Tags</th>
                        <th>Shared</th>
                        <th>Last Modified</th>
                    </tr>
                </thead>
                <tbody>
                    {% include "user/documents.jinja" %}
                </tbody>
            </table>
        </div>
        <div id="invites" class="page">
            <div class="list" {% if invites|length == 0 %}style="display:none"{% endif %}>
                <table class='table table-striped table-hover'>
                    <thead>
                        <tr>
                            <th class="cb"><input type="checkbox" /></th>
                            <th class="icon"></th>
                            <th></th>
                            <th>Name</th>
                            <th>From</th>
                            <th>Access</th>
                            <th>Received At</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% include "user/invites.jinja" %}
                    </tbody>
                </table>    
            </div>
            <div class="none" {% if invites|length == 0 %}style="display:block"{% endif %}>
                <h1 class="text-center">You currently have no invites.</h1>
            </div>
        </div>
    </div>
</div>